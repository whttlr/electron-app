{
  "$schema": "https://cnc-jog-controls.com/schemas/plugin-manifest.json",
  "name": "{{pluginName}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "displayName": "{{displayName}}",
  "author": {
    "name": "{{author.name}}",
    "email": "{{author.email}}"{{#author.url}},
    "url": "{{author.url}}"{{/author.url}}
  },
  "license": "{{license}}",
  "keywords": [
{{#keywords}}
    "{{.}}"{{#unless @last}},{{/unless}}
{{/keywords}}
  ],
  "category": "{{category}}",
  "main": "dist/index.js",
  "icon": "assets/icon-64.png",
  "screenshots": [
    "assets/screenshots/main-panel.png",
    "assets/screenshots/settings.png"
  ],
  "permissions": [
    "machine:read",
    "ui:render",
    "storage:read",
    "storage:write"{{#features}}{{#if machineControl}},
    "machine:write",
    "machine:control"{{/if}}{{#if fileProcessing}},
    "file:read",
    "file:write"{{/if}}{{#if visualization}},
    "ui:modify"{{/if}}{{#if automation}},
    "machine:control",
    "file:read"{{/if}}{{#if customGcode}},
    "machine:write",
    "machine:control"{{/if}}{{#if advancedConfig}},
    "config:write"{{/if}}{{/features}}
  ],
  "api": {
    "version": "1.0",
    "compatibility": ">=1.0.0 <2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "cnc-jog-controls": ">=1.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "configuration": {
    "schema": "config/schema.json",
    "defaults": "config/defaults.json"
  },
  "localization": {
    "defaultLocale": "en",
    "supportedLocales": ["en"],
    "fallbackLocale": "en"
  },{{#repository}}
  "repository": {
    "type": "git",
    "url": "{{repository}}"
  },
  "bugs": {
    "url": "{{repository}}/issues"
  },
  "homepage": "{{repository}}#readme",{{/repository}}
  "funding": {
    "type": "individual",
    "url": "{{#author.url}}{{author.url}}{{/author.url}}{{^author.url}}https://github.com/{{author.name}}{{/author.url}}"
  },
  "build": {
    "target": "es2020",
    "format": "umd",
    "external": ["react", "react-dom", "@cnc-jog-controls/plugin-api"],
    "globals": {
      "react": "React",
      "react-dom": "ReactDOM",
      "@cnc-jog-controls/plugin-api": "CNCPluginAPI"
    }
  },
  "testing": {
    "coverage": {
      "threshold": 80
    },
    "environments": ["jsdom"]
  },
  "deployment": {
    "marketplace": true,
    "signing": {
      "required": false
    }
  }
}