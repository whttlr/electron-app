  "prompts": [
    {
      "name": "features",
      "type": "checkbox",
      "message": "Select additional features:",
      "choices": [
        {
          "name": "Machine control integration",
          "value": "machineControl"
        },
        {
          "name": "Real-time data visualization",
          "value": "visualization"
        },
        {
          "name": "File processing capabilities",
          "value": "fileProcessing"
        },
        {
          "name": "Custom G-code commands",
          "value": "customGcode"
        },
        {
          "name": "Workflow automation",
          "value": "automation"
        },
        {
          "name": "Advanced configuration UI",
          "value": "advancedConfig"
        }
      ]
    },
    {
      "name": "uiFramework",
      "type": "list",
      "message": "UI styling approach:",
      "choices": [
        {
          "name": "CSS Modules",
          "value": "cssModules"
        },
        {
          "name": "Styled Components",
          "value": "styledComponents"
        },
        {
          "name": "Plain CSS",
          "value": "plainCSS"
        },
        {
          "name": "Tailwind CSS",
          "value": "tailwind"
        }
      ],
      "default": "cssModules"
    },
    {
      "name": "testing",
      "type": "list",
      "message": "Testing approach:",
      "choices": [
        {
          "name": "Jest + React Testing Library (Recommended)",
          "value": "jest"
        },
        {
          "name": "Vitest + React Testing Library",
          "value": "vitest"
        },
        {
          "name": "Minimal testing setup",
          "value": "minimal"
        }
      ],
      "default": "jest"
    },
    {
      "name": "bundler",
      "type": "list",
      "message": "Build tool preference:",
      "choices": [
        {
          "name": "Webpack (Full-featured)",
          "value": "webpack"
        },
        {
          "name": "Vite (Fast development)",
          "value": "vite"
        },
        {
          "name": "esbuild (Minimal)",
          "value": "esbuild"
        }
      ],
      "default": "webpack"
    }
  ],
  "postInstall": [
    "npm install"
  ]
}