{
  "name": "typescript",
  "displayName": "TypeScript Plugin",
  "description": "Full-featured TypeScript plugin template with React components, testing, and build configuration",
  "version": "1.0.0",
  "author": "CNC Jog Controls Team",
  "category": "development",
  "tags": ["typescript", "react", "testing", "full-featured"],
  "features": [
    "TypeScript with strict type checking",
    "React components with hooks",
    "Jest testing framework",
    "ESLint and Prettier configuration",
    "Webpack build configuration",
    "Hot reload development server",
    "Plugin API integration",
    "Internationalization support",
    "CSS modules and styling",
    "Documentation templates"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cnc-jog-controls/plugin-api": "^1.0.0",
    "@cnc-jog-controls/plugin-cli": "^1.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/user-event": "^14.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.0",
    "ts-loader": "^9.4.0",
    "css-loader": "^6.7.0",
    "style-loader": "^3.3.0",
    "file-loader": "^6.2.0"
  },
