  "author": "CNC Jog Controls Team",
  "category": "visualization",
  "tags": ["visualization", "3d", "charts", "simulation", "toolpath", "graphics"],
  "features": [
    "3D machine visualization with Three.js",
    "Real-time toolpath preview",
    "Interactive 2D charts and graphs",
    "Machine simulation and animation",
    "Material removal visualization",
    "Performance dashboards",
    "Data visualization widgets",
    "Custom visualization components",
    "Export capabilities (PNG, SVG, STL)",
    "WebGL-accelerated rendering"
  ],
