  "prompts": [
    {
      "name": "visualizationType",
      "type": "checkbox",
      "message": "Visualization types to include:",
      "choices": [
        {
          "name": "3D Machine Visualization",
          "value": "machine3d"
        },
        {
          "name": "3D Toolpath Preview",
          "value": "toolpath3d"
        },
        {
          "name": "2D Working Area View",
          "value": "workingArea2d"
        },
        {
          "name": "Real-time Charts",
          "value": "realtimeCharts"
        },
        {
          "name": "Performance Dashboards",
          "value": "dashboards"
        },
        {
          "name": "Material Simulation",
          "value": "materialSim"
        },
        {
          "name": "Data Export Tools",
          "value": "dataExport"
        }
      ]
    },
    {
      "name": "chartLibrary",
      "type": "list",
      "message": "Preferred chart library:",
      "choices": [
        {
          "name": "Chart.js (Lightweight, good performance)",
          "value": "chartjs"
        },
        {
          "name": "Plotly.js (Advanced features, interactive)",
          "value": "plotly"
        },
        {
          "name": "D3.js (Custom visualizations, flexible)",
          "value": "d3"
        },
        {
          "name": "Recharts (React-native, simple)",
          "value": "recharts"
        }
      ],
      "default": "chartjs"
    },
    {
      "name": "renderingEngine",
      "type": "list",
      "message": "3D rendering approach:",
      "choices": [
        {
          "name": "React Three Fiber (React integration)",
          "value": "r3f"
        },
        {
          "name": "Three.js Direct (More control)",
          "value": "threejs"
        },
        {
          "name": "Babylon.js (Advanced features)",
          "value": "babylonjs"
        },
        {
          "name": "WebGL Direct (Maximum performance)",
          "value": "webgl"
        }
      ],
      "default": "r3f"
    },
    {
      "name": "performanceLevel",
      "type": "list",
      "message": "Performance optimization level:",
      "choices": [
        {
          "name": "Basic (Simple scenes, good compatibility)",
          "value": "basic"
        },
        {
          "name": "Optimized (Medium complexity, good performance)",
          "value": "optimized"
        },
        {
          "name": "Advanced (Complex scenes, maximum performance)",
          "value": "advanced"
        }
      ],
      "default": "optimized"
    },
    {
      "name": "exportFormats",
      "type": "checkbox",
      "message": "Export formats to support:",
      "choices": [
        {
          "name": "PNG Images",
          "value": "png"
        },
        {
          "name": "SVG Vector Graphics",
          "value": "svg"
        },
        {
          "name": "STL 3D Models",
          "value": "stl"
        },
        {
          "name": "OBJ 3D Models",
          "value": "obj"
        },
        {
          "name": "CSV Data",
          "value": "csv"
        },
        {
          "name": "JSON Data",
          "value": "json"
        },
        {
          "name": "PDF Reports",
          "value": "pdf"
        }
      ]
    },
    {
      "name": "dataVisualization",
      "type": "checkbox",
      "message": "Data visualization features:",
      "choices": [
        {
          "name": "Real-time position tracking",
          "value": "positionTracking"
        },
        {
          "name": "Feed rate monitoring",
          "value": "feedRateMonitoring"
        },
        {
          "name": "Spindle speed visualization",
          "value": "spindleVisualization"
        },
        {
          "name": "Temperature monitoring",
          "value": "temperatureMonitoring"
        },
        {
          "name": "Power consumption tracking",
          "value": "powerTracking"
        },
        {
          "name": "Vibration analysis",
          "value": "vibrationAnalysis"
        },
        {
          "name": "Quality metrics",
          "value": "qualityMetrics"
        }
      ]
    },
    {
      "name": "interactivity",
      "type": "checkbox",
      "message": "Interactive features:",
      "choices": [
        {
          "name": "Mouse/touch navigation",
          "value": "navigation"
        },
        {
          "name": "Zoom and pan controls",
          "value": "zoomPan"
        },
        {
          "name": "Layer visibility toggles",
          "value": "layerToggles"
        },
        {
          "name": "Time scrubbing",
          "value": "timeScrubbing"
        },
        {
          "name": "Measurement tools",
          "value": "measurementTools"
        },
        {
          "name": "Selection and highlighting",
          "value": "selection"
        },
        {
