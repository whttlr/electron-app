          "name": "Advanced jog controls",
          "value": "advancedJog"
        },
        {
          "name": "Continuous jog mode",
          "value": "continuousJog"
        },
        {
          "name": "Step jog with custom increments",
          "value": "stepJog"
        },
        {
          "name": "Multi-axis coordinated motion",
          "value": "coordinatedMotion"
        },
        {
          "name": "Backlash compensation",
          "value": "backlashComp"
        },
        {
          "name": "Feed rate ramping",
