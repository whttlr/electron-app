{
  "name": "machine-control",
  "displayName": "Machine Control Plugin",
  "description": "Advanced machine control plugin template with G-code execution, motion control, and safety systems",
  "version": "1.0.0",
  "author": "CNC Jog Controls Team",
  "category": "automation",
  "tags": ["machine-control", "gcode", "motion", "safety", "automation"],
  "features": [
    "Advanced G-code command execution",
    "Custom motion control algorithms",
    "Real-time position monitoring",
    "Safety system integration",
    "Tool change automation",
    "Coordinate system management",
    "Feed rate and spindle control",
    "Limit switch monitoring",
    "Emergency stop handling",
    "Machine state management"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.150.0",
    "lodash": "^4.17.21"
