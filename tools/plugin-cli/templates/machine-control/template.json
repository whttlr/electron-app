  "prompts": [
    {
      "name": "machineType",
      "type": "list",
      "message": "Target machine type:",
      "choices": [
        {
          "name": "CNC Router (3-axis)",
          "value": "router3axis"
        },
        {
          "name": "CNC Mill (3-axis)",
          "value": "mill3axis"
        },
        {
          "name": "CNC Mill (4-axis)",
          "value": "mill4axis"
        },
        {
          "name": "CNC Lathe",
          "value": "lathe"
        },
        {
          "name": "3D Printer",
          "value": "printer3d"
        },
        {
          "name": "Laser Cutter",
          "value": "laser"
        },
        {
          "name": "Generic CNC",
          "value": "generic"
        }
      ],
      "default": "router3axis"
    },
    {
      "name": "controllerType",
      "type": "list",
      "message": "CNC controller type:",
      "choices": [
        {
          "name": "GRBL (Arduino-based)",
          "value": "grbl"
        },
        {
          "name": "LinuxCNC",
          "value": "linuxcnc"
        },
        {
          "name": "Mach3/Mach4",
          "value": "mach"
        },
        {
          "name": "TinyG",
          "value": "tinyg"
        },
        {
          "name": "Smoothieboard",
          "value": "smoothie"
        },
        {
          "name": "Custom/Other",
          "value": "custom"
        }
      ],
      "default": "grbl"
    },
    {
      "name": "safetyFeatures",
