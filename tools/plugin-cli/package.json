{
  "name": "@cnc-jog-controls/plugin-cli",
  "version": "1.0.0",
  "description": "Command-line tool for CNC Jog Controls plugin development",
  "main": "dist/cli.js",
  "bin": {
    "cnc-plugin": "dist/cli.js"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "docs": "typedoc src --out docs"
  },
  "keywords": [
    "cnc",
    "cnc-jog-controls",
    "plugin",
    "cli",
    "development",
    "machining",
    "gcode"
  ],
  "author": "CNC Jog Controls Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cnc-jog-controls/plugin-cli.git"
  },
  "bugs": {
    "url": "https://github.com/cnc-jog-controls/plugin-cli/issues"
  },
  "homepage": "https://github.com/cnc-jog-controls/plugin-cli#readme",
  "dependencies": {
    "commander": "^10.0.0",
    "inquirer": "^9.1.0",
    "chalk": "^5.2.0",
    "ora": "^6.1.0",
    "fs-extra": "^11.1.0",
    "glob": "^8.1.0",
    "semver": "^7.3.8",
    "ajv": "^8.12.0",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "webpack": "^5.75.0",
    "webpack-dev-server": "^4.11.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.17.0",
    "archiver": "^5.3.1",
    "tar": "^6.1.13",
    "node-fetch": "^3.3.0",
    "ws": "^8.12.0",
    "yaml": "^2.2.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/glob": "^8.0.0",
    "@types/semver": "^7.3.0",
    "@types/express": "^4.17.0",
    "@types/archiver": "^5.3.0",
    "@types/tar": "^6.1.0",
    "@types/ws": "^8.5.0",
    "@types/mustache": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.23.0",
    "rimraf": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "preferGlobal": true
}