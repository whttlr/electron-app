{
  "name": "machine-status-monitor",
  "version": "1.0.0",
  "description": "Real-time machine status monitoring plugin for CNC Jog Controls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "CNC Jog Controls Team",
  "license": "MIT",
  "keywords": [
    "cnc",
    "machine-control",
    "status",
    "monitoring",
    "real-time"
  ],
  "cncPlugin": {
    "apiVersion": "1.0.0",
    "category": "machine-control",
    "displayName": "Machine Status Monitor",
    "description": "Monitor machine status, position, and alarms in real-time",
    "icon": "assets/icon.png",
    "permissions": [
      "machine.status.read",
      "machine.position.read",
      "machine.alarms.read",
      "notifications.show"
    ],
    "settings": {
      "updateInterval": {
        "type": "number",
        "default": 100,
        "min": 50,
        "max": 1000,
        "description": "Status update interval in milliseconds"
      },
      "showDebugInfo": {
        "type": "boolean",
        "default": false,
        "description": "Show additional debug information"
      },
      "alarmNotifications": {
        "type": "boolean",
        "default": true,
        "description": "Show desktop notifications for alarms"
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@cnc-jog-controls/plugin-api": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^10.0.0",
    "recharts": "^2.5.0",
    "date-fns": "^2.29.0",
    "clsx": "^1.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^3.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^29.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/user-event": "^14.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^4.9.0",
    "vite": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}