{
  "name": "gcode-snippets",
  "version": "1.0.0",
  "description": "G-code snippet manager for quick insertion of common commands",
  "main": "src/index.js",
  "keywords": ["cnc", "gcode", "snippets", "productivity"],
  "cncPlugin": {
    "apiVersion": "1.0.0",
    "category": "productivity",
    "displayName": "G-code Snippets",
    "description": "Manage and insert common G-code snippets quickly",
    "permissions": ["file.read", "file.write", "machine.control"],
    "ui": {
      "placement": "modal",
      "screen": "main",
      "size": {
        "width": "auto",
        "height": "auto"
      },
      "priority": 150
    }
  }
}