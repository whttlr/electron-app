{
  "name": "jog-controls-playground",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main/main.js",
  "homepage": "./",
  "dependencies": {
    "@ant-design/icons": "^5.0.0",
    "@prisma/client": "^6.11.0",
    "@react-three/drei": "^9.0.0",
    "@react-three/fiber": "^8.0.0",
    "@types/jszip": "^3.4.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/serialport": "^8.0.5",
    "@types/three": "^0.173.0",
    "antd": "^5.0.0",
    "electron-updater": "^6.6.2",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.5.3",
    "react-router-dom": "^7.6.3",
    "serialport": "^13.0.0",
    "three": "^0.173.0"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "build:electron": "vite build --config vite.electron.config.js && vite build --config vite.preload.config.js",
    "build:electron-renderer": "vite build --config vite.electron-renderer.config.js",
    "build:all": "npm run build && npm run build:electron",
    "build:all-electron": "npm run build:electron-renderer && npm run build:electron",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently \"npm run start\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build:all && electron-builder",
    "electron:build:mac": "npm run build:all && electron-builder --mac",
    "electron:build:win": "npm run build:all && electron-builder --win",
    "electron:build:linux": "npm run build:all && electron-builder --linux",
    "electron:pack": "npm run build:all && electron-builder --dir",
    "electron:test": "jest --config jest.electron.config.js",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:electron": "npm run build:electron && npm run start & wait-on http://localhost:5173 && playwright test --config=playwright-electron.config.ts; pkill -f vite",
    "test:e2e:electron:ui": "npm run build:electron && concurrently --kill-others --success first \"npm run start\" \"wait-on http://localhost:5173 && playwright test --config=playwright-electron.config.ts --ui\"",
    "test:e2e:electron:debug": "npm run build:electron && concurrently --kill-others --success first \"npm run start\" \"wait-on http://localhost:5173 && playwright test --config=playwright-electron.config.ts --debug\"",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "lint:boundaries": "eslint src/ --ext .js,.jsx,.ts,.tsx --rule 'boundaries/element-types: error'",
    "lint:check": "eslint --print-config src/main.tsx | grep boundaries"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "jest-watch-typeahead": "^3.0.1",
    "prisma": "^6.11.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "wait-on": "^8.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.jogger.cnc-controller",
    "productName": "CNC Jog Controls",
    "directories": {
      "buildResources": "build-resources",
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/**/*",
      "docs/**/*"
    ],
    "extraMetadata": {
      "main": "dist-electron/main/main.js"
    },
    "publish": {
      "provider": "github",
      "owner": "jogger-cnc",
      "repo": "jog-controls"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "publisherName": "Jogger CNC Tools"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
